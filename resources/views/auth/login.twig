{% extends 'auth/template.twig' %}

{% block content %}
    <div class="animate form login_form" style="top: 15px;">
        <section class="login_content">
            <form action="{{ path_for('auth.login') }}" method="post" autocomplete="off">
                <h1>Login Form</h1>
                <div class="form-group{{ errors.username ? '  has-error' ? '' }}">
                    <input type="text" class="form-control" placeholder="Username" name="username" id="username" required="" />
                    {%  if errors.username  %}
                        <span class="help-block">{{ errors.username | first }}</span>
                    {% endif %}
                </div>
                <div class="form-group{{ errors.password ? '  has-error' ? '' }}">
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password" required="" />
                    {%  if errors.username  %}
                        <span class="help-block">{{ errors.password | first }}</span>
                    {% endif %}
                </div>

                {{ csrf.field | raw }}

                <div>
                    <button type="submit" class="btn btn-default submit">Submit</button>
                </div>

                <div class="clearfix"></div>

                <div class="separator">
                    <div class="clearfix"></div>
                    <br />

                    <div>
                        <h1><i class="fa fa-database"></i> CyberWorks 3</h1>
                        <p>&copy;2017 <a href="https://cyberbyte.org.uk">Cyberbyte Studios</a></p>
                    </div>
                </div>
            </form>
        </section>
    </div>
{% endblock %}